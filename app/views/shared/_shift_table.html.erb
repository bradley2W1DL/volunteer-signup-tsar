<!-- establish local variable within partial of 'shift' -->
<div class="shift-table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Team Affiliation</th>
      </tr>
    </thead>
    <tbody>
      <% shift.signups.each_with_index do |signup, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= signup.name %></td>
          <td><%= signup.phone_number %></td>
          <td><%= signup.email %></td>
          <td>
            <%= signup.try(:team_affiliation) || 'N/A' %>
            <%= link_to '', signup_path, data: { toggle: 'modal', target: '#edit-email-modal'} %>
          </td>
          <%= link_to "Messages", conversations_path, data: { toggle: "modal", target: "#ajax-modal" } %>

          <% if current_user.try(:admin?) %>
            <td style="width: 5%;">
              <%= link_to 'edit', edit_signup_path(signup) %>
              <%= link_to 'destroy', signup, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          <% end %>
        </tr>
      <% end %>
      <% if shift.available_spots? %>
        <% (shift.spots_remaining - 1).times do |i| %>
          <!-- display empty table rows -->
            <% num = shift.signups.count + (i + 1) %>
          <tr>
            <td><%= num %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        <!-- inline form for signups -->
        <tr>
          <%= form_for @new_signup do |f| %>
              <%= f.hidden_field :shift_id, value: shift.id %>
              <td><%= shift.required_number %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.text_field :phone_number %></td>
              <td><%= f.email_field :email %></td>
              <td><input type="text" placeholder="team affiliation?">&nbsp;<%= f.submit 'Sign Up'%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>