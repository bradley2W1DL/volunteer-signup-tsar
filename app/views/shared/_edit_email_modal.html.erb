<!-- Modal -->
<div class="modal fade" id="edit-signup-modal" tabindex="-1" role="dialog" aria-labelledby="editEmailModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h5 class="modal-title" id="editEmailModal">Send an Email to Change your Signup</h5>
      </div>
      <div class="modal-body">
        <h6>To make change to your signup please send an email</h6>
        <p>And we'll think about it!</p>

        <input id='name-edit' type="text" placeholder="name">
        <input type="text-area">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <!-- Have the button post to a 'mailer' endpoint which grabs param values-->
        <button type="button" class="btn btn-primary">Send Message</button>
      </div>
    </div>
  </div>
</div>