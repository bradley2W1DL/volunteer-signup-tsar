<p id="notice"><%= notice %></p>

<h1>Volunteer Shift Signups</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signups.each do |signup| %>
      <tr>
        <td><%= signup.name %></td>
        <td><%= signup.email %></td>
        <td><%= signup.phone_number %></td>
        <!-- todo make this edit path pop-up a modal to request a change via email: sent to me -->
        <td><%= link_to 'Edit', edit_signup_path(signup) %></td>
        <% if false #current_user && current_user.try(:admin?) %>
          <td><%#= link_to 'Edit', edit_signups_path(signup) %></td>
          <td><%= link_to 'Destroy', signup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Signup', new_signup_path %>
